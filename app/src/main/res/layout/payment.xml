<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/list_series_cardview"
        android:clickable="true"
         >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Total Payable Amount"
            android:padding="18dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:id="@+id/tot_amount"
            android:layout_height="wrap_content"
            android:text="Rs 0.0"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:gravity="right"
            android:padding="18dp"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Delivery Charge"
                android:padding="18dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Rs.50"
                android:id="@+id/delevery_charge"
                android:layout_gravity="right"
                android:layout_marginRight="13dp"
                android:gravity="right"
                android:padding="18dp"
                />

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textStyle="normal"
            android:text="Discount Amount"
            android:padding="15dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Rs 0.0"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:gravity="right"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:padding="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/radiuss"
        android:padding="15dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Total Payable Amount"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Rs.50"
            android:id="@+id/all_amount"
            android:layout_gravity="right"
            android:layout_marginRight="13dp"
            android:gravity="right"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility = "gone"
        android:id="@+id/name"
        android:text="hide"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility = "gone"
        android:id="@+id/upi_id"
        android:text="kumarpravind285@oksbi"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility = "gone"
        android:id="@+id/amount_et"
        android:inputType="numberDecimal"
        android:text="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility = "gone"
        android:id="@+id/note"
        android:text="Store Forest"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/check"
        />
        <Button
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/gpay"
            android:background="@color/white"
            android:textAlignment="center"
            android:drawableLeft="@drawable/gpay"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
             android:text="Google Pay"
            android:textSize="15dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:id="@+id/phonepay"
                android:padding="12dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/phonepe"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:textAlignment="center"
                android:text="Phone Pay"
                android:textSize="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:id="@+id/bhim"
                android:background="@color/white"
                android:padding="17dp"
                android:drawableLeft="@drawable/bhim"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:textAlignment="center"
                android:text="BHIM"
                android:textSize="15dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            android:drawableLeft="@drawable/bhim"
            android:button="@null"
            android:id="@+id/cod"
            android:background="@color/white"
            android:drawableRight="@android:drawable/btn_radio"
            android:textAlignment="center"
            android:text="COD"
            android:textSize="15dp" />

</LinearLayout>

</ScrollView>
</RelativeLayout>