<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:id="@+id/list_series_cardview"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/full"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="kolkata"
                android:id="@+id/state"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
               android:layout_marginLeft="12dp"
                app:cardCornerRadius="5dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp">

                <TextView
                    android:id="@+id/van_name"
                    android:maxLength="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:textStyle="normal"
                    android:layout_marginLeft="7dp"
                    android:layout_height="wrap_content"
                    android:text="Gaurav Kirana Strore"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/p_share"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/i_category"
                        android:textStyle="normal"
                        android:textSize="11sp"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share"
                        android:layout_gravity="right"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/wait_details"
                    android:textStyle="normal"
                    android:layout_marginLeft="10dp"
                    android:textSize="11sp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"
                        android:textStyle="normal"
                        android:textSize="12dp"
                        android:text="Rs.100"
                        android:gravity="center"
                        android:id="@+id/offer_price"
                        />
                    <View
                        android:layout_width="65dp"
                        android:layout_height="1dp"
                        android:textAlignment="center"
                        android:layout_marginTop="9dp"
                        android:background="@color/tab_indicator_gray"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/l_out"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="8dp"
                       android:layout_gravity="center"
                        android:layout_weight="0.4"
                        android:text="100"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/price"
                        />
                   <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:id="@+id/remove"
                        android:layout_marginRight="5dp"
                        android:textSize="13sp"
                        android:text="CUT"
                        android:drawableRight="@drawable/ic_remove"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:id="@+id/booking"
                        android:layout_marginRight="5dp"
                        android:textSize="13sp"
                        android:text="Add"
                        android:drawableRight="@drawable/ic_add"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#000" />
    </LinearLayout>


</androidx.cardview.widget.CardView>